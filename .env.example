NODE_ENV=development
LOG_LEVEL=info
PORT=4000
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/hifz_os?schema=public
# Optional direct connection for migration/seed/verify ops (recommended for Neon):
# DIRECT_URL=postgresql://<user>:<password>@<non-pooler-host>/<db>?sslmode=require
REDIS_URL=redis://localhost:6379
JWT_ACCESS_SECRET=replace_me_access_secret
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL_DAYS=30
REFRESH_TOKEN_PEPPER=replace_me_refresh_pepper
SENTRY_DSN=
SENTRY_ENVIRONMENT=
SENTRY_TRACES_SAMPLE_RATE=0.1
OBSERVABILITY_DEBUG_ENABLED=false
OBSERVABILITY_DEBUG_TOKEN=
PRISMA_QUERY_LOGS=false
