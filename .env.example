CLERK_AUTH_ENABLED=false
CLERK_JWKS_URL=
CLERK_JWT_ISSUER=
CLERK_JWT_AUDIENCE=
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://hifzer-frontend.vercel.app
