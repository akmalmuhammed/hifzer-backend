{
  "name": "hifz-os-backend",
  "version": "0.1.0",
  "description": "Hifz OS MVP backend",
  "main": "dist/src/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node dist/src/server.js",
    "prebuild": "pnpm prisma:generate",
    "build": "tsc -p tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:deploy:prod": "tsx scripts/deploy-migrations.ts",
    "prisma:status": "prisma migrate status",
    "seed:metadata": "tsx scripts/build-ayah-metadata-from-quran-data.ts",
    "seed:build": "tsx scripts/build-canonical-ayah-seed.ts",
    "seed": "tsx prisma/seed.ts",
    "seed:full": "tsx prisma/seed-full.ts",
    "db:verify": "tsx scripts/verify-production-db.ts",
    "ops:prod:prepare": "pnpm prisma:deploy:prod && pnpm seed:full && pnpm db:verify",
    "worker": "tsx src/queues/reducerWorker.ts"
  },
  "keywords": [
    "hifz",
    "quran",
    "spaced-repetition"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": "20.x"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@sentry/node": "^10.38.0",
    "argon2": "^0.44.0",
    "bullmq": "^5.67.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "hono": "^4.11.9",
    "ioredis": "^5.9.2",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.3",
    "jwks-rsa": "^3.2.0",
    "pino": "^10.3.1",
    "pino-http": "^11.0.0",
    "postgres": "^3.4.8",
    "prisma": "^6.16.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.3",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.39.1",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
